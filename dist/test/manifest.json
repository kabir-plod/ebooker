{
	"manifest_version": 2,

	"name": "ebooker tests",
	"description": "Tests for the ebooker extension",

	"version": "0.1.0",

	"browser_action": {
		"default_title": "ebooker tests",
		"default_icon": {
			
		}
	},

	"options_ui": {

	},

	"icons": {

	},

	"permissions": ["tabs", "storage", "https://*/*", "http://*/*"],

	"background": {
		"page": "bg.html",
		"persistent": true
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content-script.js"],
			"run_at": "document_idle"
		}
	]
}
